<h1>Task#index</h1>

<p>Hello</p>


<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.name, task_path(task) %>
        <%= link_to 'Edit a task', edit_task_path(task) %>
        <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure ?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'New task', new_task_path(@task) %>


